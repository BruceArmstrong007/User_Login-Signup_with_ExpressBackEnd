<link href="/css/main.css" rel="stylesheet" type="text/css">
<link href="/css/w3.css" rel="stylesheet" type="text/css">
<meta name="viewport" content="width=device-width, initial-scale=1">
<div class="w3-bar w3-medium">
    <a href="/user/<%= user_id %>"  class="w3-bar-item w3-xxlarge">LOGO</a>
    <a href="/accounts/logout"  class="w3-bar-item w3-button  w3-hover-red w3-right">Logout</a>
</div>
<div class="w3-card-4 w3-display-middle w3-half">
    <div class="w3-container">
<h1 class="w3-center w3-blue">Edit User</h1>
<form method="post" class="form" action="">
    <div>
        <label>Name:</label>
        <input class="w3-input" type="text" maxlength="45" minlength="3" name="name" onkeypress="return validateKeyStrokes(event)" required>
    </div>
    <div>
        <label>Age:</label>
        <input class="w3-input" type="number" step="0.1" name="age" max="85" min="18" required>
    </div>
    <div>
        <label>Date of Birth:</label>
        <input class="w3-input" type="date" name="dob" id="dat" required>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <p><input class="w3-button w3-right w3-hover-blue w3-green w3-round" type="submit" value="Save"></p>
</form>
</div><br>
</div>
<script src="/js/user_edit.js"></script>